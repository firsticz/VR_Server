{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "pm2 startOrRestart ecosystem.prod.config.js",
    "deploy": "yarn build && firebase deploy --only functions:app",
    "logs": "firebase functions:log",
    "build": "./node_modules/.bin/babel src --out-dir dist",
    "develop": "pm2 startOrRestart ecosystem.config.js && pm2 logs",
    "dev": "concurrently \"yarn run build -- --watch\" \"yarn run emulate\"",
    "restart": "pm2 restart all && pm2 logs",
    "stop": "pm2 delete ecosystem.config.js",
    "emulate": "firebase emulators:start",
    "init-config": "firebase functions:config:get > .runtimeconfig.json",
    "init-emulator": "firebase init emulators",
    "firebase": "firebase"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@babel/polyfill": "^7.4.4",
    "@babel/register": "^7.4.4",
    "apollo-server-express": "^2.6.4",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "cachegoose": "^8.0.0",
    "cacheman-mongo": "^1.0.4",
    "compression": "^1.7.4",
    "config": "^3.3.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-graphql": "^0.9.0",
    "express-jwt": "^5.3.1",
    "express-session": "^1.16.2",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.3.0",
    "firebase-tools": "^7.14.0",
    "graphql": "^14.3.1",
    "graphql-compose": "^7.1.0",
    "graphql-compose-mongoose": "^7.0.3",
    "graphql-compose-pagination": "^6.0.3",
    "graphql-depth-limit": "^1.1.0",
    "graphql-tag": "^2.10.1",
    "jade": "^1.11.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mongoose": "^5.6.1",
    "mongoose-timestamp": "^0.6.0",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-strava": "^0.2.0",
    "password-hash": "^1.2.2",
    "pm2": "^3.5.1",
    "requestify": "^0.2.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/node": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "babel-eslint": "^10.0.2",
    "babel-plugin-import-graphql": "^2.7.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.0.1",
    "eslint-config-nss": "^1.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.1.6"
  },
  "private": true
}
